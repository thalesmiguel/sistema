<script type="text/javascript">
  $(document).off("dblclick", "#leilao_subtipo_lotes-table tr[id^=subtipo]");
  $(document).on("dblclick", "#leilao_subtipo_lotes-table tr[id^=subtipo]", function(){
    let id_hidden_input = $(this).attr("id");
    let $id = $("#leilao_subtipo_lotes_id");

    let modal = $("#leilao_subtipo_lotes_modal");
    let nome_input = $("#leilao_subtipo_lotes_nome");
    let nome_label = $("label[for='leilao_subtipo_lotes_nome']");

    let $row = $(this).closest("tr");
    let $nome = $row.find("td:nth-child(2)");

    $id.val(id_hidden_input.replace("subtipo_", ""));

    $.each($nome, function() {
      nome_input.val($nome.text());
    });

    nome_label.addClass("active");
    $("#limpa_subtipo_lotes").addClass("active");
    $("#salvar_leilao").prop("disabled", false)
    modal.closeModal();
  });
</script>
