<div class="card p-t-0 p-b-70 p-l-30 p-r-30">

  <div id="funcao_modal" class="modal bottom-sheet modal-grande"></div>

  <div class="row m-b-0">
    <div class="valign-wrapper">
      <div class="col s6 valign">
        <h3>Funções</h3>
      </div>
      <div class="col s6 valign right-align">
        <%= link_to_new new_funcao_path if can? :manage, :funcao %>
      </div>
    </div>
  </div>
  <table id="funcoes-table" class="highlight bordered" data-source="<%= funcoes_path(format: :json) %>">
    <thead>
      <tr>
        <th width="60%">Nome <%= filtro_dt %> </th>
        <th width="20%">Criado em <%= filtro_dt %> </th>
        <th width="20%">Alterado em <%= filtro_dt %> </th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>

</div>
