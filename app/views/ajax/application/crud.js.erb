<% if obj.errors.any? %>
  <% obj.errors.each do |a, m| %>
    Materialize.toast("<%= a.to_s.humanize %> <%= m %>", 5000, 'rounded red darken-4');
  <% end %>
<% else %>
  Materialize.toast("<%= notice %>", 5000, 'rounded deep-purple');
  <% case acao %>
  <% when 'create' %>
    <%= render file: "ajax/#{controller}/incluir.js.erb", locals: { obj: obj } %>
  <% when 'update' %>
    <%= render file: "ajax/#{controller}/alterar.js.erb", locals: { obj: obj } %>
  <% when 'destroy' %>
    <%= render file: "ajax/#{controller}/excluir.js.erb", locals: { obj: obj } %>
  <% else %>
    alert('erro');
  <% end %>
<% end %>
