<%= form_for @estado, remote: true, html: { class: "estado-form col s12 validate" } do |f| %>
  <div class="modal-content">
    <div class="p-20 modal-border">
      <div class="row card-content m-b-0 p-b-0 p-l-30 p-r-30">
        <div class="row">


          <div class="input-field col s12">
            <%= f.text_field :nome, required:"" %>
            <%= f.label :nome %>
          </div>

          <div class="input-field col s12">
            <%= f.text_field :sigla, required:"", minlength:"2" %>
            <%= f.label :sigla %>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <%= button_tag "Salvar", class:"btn waves-effect waves-light" %>
        <%= button_tag "Cancelar", class:"btn-flat waves-effect m-r-5", onclick: "$('#estado_modal').closeModal()", type: 'button' %>

        <% if !@estado.new_record? %>
          <%= link_to "Excluir", estado_path(@estado), method: 'delete', remote: true, class: 'btn danger-color waves-effect waves-light m-r-5',
                data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusÃ£o?')) } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
