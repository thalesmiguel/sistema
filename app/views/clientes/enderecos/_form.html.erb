<%= form_for [@cliente, @endereco], remote: true, html: { class: "endereco-form col s12" } do |f| %>
  <div class="modal-content">
    <div class="p-20">
      <div class="row card-content m-b-0 p-b-0 p-l-30 p-r-30">
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :logradouro %>
            <%= f.label :logradouro %>
          </div>

          <div class="input-field col s12">
            <%= f.text_field :numero %>
            <%= f.label :numero %>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <%= button_tag "Salvar", class:"btn waves-effect waves-light" %>
        <%= button_tag "Cancelar", class:"btn-flat waves-effect m-r-5", onclick: "$('#endereco_modal').closeModal()", type: 'button' %>
        <%#= button_tag "Cancelar", class:"btn-flat waves-effect waves-light btn-cancelar ", type: :reset %>

        <% if !@endereco.new_record? %>
          <%= link_to "Excluir", cliente_endereco_path(@cliente, @endereco), method: 'delete', remote: true, class: 'btn danger-color waves-effect waves-light m-r-5',
                data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusÃ£o?')) } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
