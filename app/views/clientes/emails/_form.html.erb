<%= form_for [@cliente, @email], remote: true, html: { class: "email-form col s12 validate" } do |f| %>
  <div class="modal-content">
    <div class="p-20 modal-border">
      <div class="row card-content m-b-0 p-b-0 p-l-30 p-r-30">

        <div class="row">
          <div class="input-field col s12 m8">
            <%= f.email_field :email, required:"" %>
            <%= f.label :email, "E-mail" %>
          </div>

          <div class="input-field col s12 m4">
            <%= f.text_field :contato %>
            <%= f.label :contato %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12 m1">
            <%= f.check_box :mala_direta, class: 'filled-in' %>
            <%= f.label :mala_direta, "Mala Direta"  %>
          </div>
          <div class="input-field col s12 m1">
            <%= f.check_box :ativo, class: 'filled-in' %>
            <%= f.label :ativo %>
          </div>
          <div class="input-field col s12 m1">
            <%= f.check_box :solicitacao_email, class: 'filled-in' %>
            <%= f.label :solicitacao_email, "Solicitação"  %>
          </div>
          <div class="input-field col s12 m1">
            <%= f.check_box :envio_contratos, class: 'filled-in' %>
            <%= f.label :envio_contratos, "Contratos"  %>
          </div>

        </div>
      </div>

      <div class="modal-footer">
        <%= button_tag "Salvar", class:"btn waves-effect waves-light" %>
        <%= button_tag "Cancelar", class:"btn-flat waves-effect m-r-5", onclick: "$('#email_modal').closeModal()", type: 'button' %>

        <% if !@email.new_record? %>
          <%= link_to "Excluir", cliente_email_path(@cliente, @email), method: 'delete', remote: true, class: 'btn danger-color waves-effect waves-light m-r-5',
                data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusão?')) } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
