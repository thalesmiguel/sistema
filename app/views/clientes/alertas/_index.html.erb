<div class="card-panel p-t-0 p-l-30 p-r-30">
  <div class="p-t-0 paginate_left">
    <div class="row m-b-0">
      <div class="valign-wrapper">
        <div class="col s6 valign">
          <h1>Alertas</h1>
        </div>
        <div class="col s6 valign right-align">
          <%= link_to_new new_cliente_alerta_path, true, "", "Novo Alerta" if can? :manage, :alerta %>
        </div>
      </div>
    </div>

    <table id="alertas-table" class="highlight bordered" data-source="<%= cliente_alertas_path(@cliente_alerta, format: :json, params: {somente_ativos: params[:somente_ativos]}) %>" data-cliente-alerta="<%= @cliente_alerta %>">
      <thead>
        <tr>
          <th width="">Tipo</th>
          <th width="">Data</th>
          <th width="">Descrição</th>
          <th width="">Ativo</th>
          <th width="">Comentários</th>
          <th width="">Usuário</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>

    <div class="row m-b-0 m-t-30">
      <div class="valign-wrapper">
        <div class="col s12 valign right-align">
          <button class="btn-flat waves-effect" id="alerta_somente_ativos_Btn">Somente Ativos</button>
          <button class="btn-flat waves-effect hide" id="alerta_exibir_todos_Btn">Exibir Todos</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card-panel p-t-10 p-b-20 p-l-30 p-r-30">
  <div class="row m-b-0">
    <fieldset>
      <legend> Comentários do Alerta </legend>
      <div id="alerta-alerta_comentarios"></div>
    </fieldset>
  </div>
</div>
