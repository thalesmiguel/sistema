<div class="card-panel p-t-0 p-b-70 p-l-30 p-r-30">
  <div class="row m-b-0">
    <div class="valign-wrapper">
      <div class="col s6 valign">
        <h1>Alertas</h1>
      </div>

      <button type="button" name="button" id="bozoBtn">Bozo</button>
      
      <div class="col s6 valign right-align">
        <% if params[:somente_ativos] == "false" %>
          <%= link_to "Somente Ativos", cliente_alertas_path(params: {somente_ativos: "true"}), remote: true, id: "alertas-somente-ativos", class: "waves-effect waves-light btn-flat" if can? :read, :alerta %>
        <% else %>
          <%= link_to "Exibir Todos", cliente_alertas_path(params: {somente_ativos: "false"}), remote: true, id: "alertas-exibir-todos", class: "waves-effect waves-light btn-flat" if can? :read, :alerta %>
        <% end %>
        <%= link_to_new new_cliente_alerta_path, true, "", "Novo Alerta" if can? :manage, :alerta %>
      </div>
    </div>
  </div>

  <table id="alertas-table" class="highlight bordered" data-source="<%= cliente_alertas_path(@cliente_alerta, format: :json, params: {somente_ativos: params[:somente_ativos]}) %>" data-cliente-alerta="<%= @cliente_alerta %>">
    <thead>
      <tr>
        <th width="">Tipo</th>
        <th width="">Data</th>
        <th width="">Descrição</th>
        <th width="">Ativo</th>
        <th width="">Comentários</th>
        <th width="">Usuário</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<div class="card-panel p-t-10 p-b-20 p-l-30 p-r-30">
  <div class="row m-b-0">
    <fieldset>
      <legend> Comentários do Alerta </legend>
      <div id="alerta-alerta_comentarios"></div>
    </fieldset>
  </div>
</div>
