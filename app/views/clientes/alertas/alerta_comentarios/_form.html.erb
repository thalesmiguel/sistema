<%= form_for [@alerta, @alerta_comentario], remote: true, html: { class: "alerta_comentario-form col s12 validate" } do |f| %>
  <div class="modal-content">
    <div class="p-20 modal-border">
      <div class="row card-content m-b-0 p-b-0 p-l-30 p-r-30">

        <div class="row">
          <div class="input-field col s12">
            <%= f.text_area :descricao, rows: 12, class: 'materialize-textarea limita-text-area' %>
            <%= f.label :descricao, "Descrição" %>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <%= button_tag "Salvar", class:"btn waves-effect waves-light" if can? :manage, :alerta_comentario %>
        <%= button_tag "Cancelar", class:"btn-flat waves-effect m-r-5", onclick: "$('#alerta_comentario_modal').closeModal()", type: 'button' %>

        <% if !@alerta_comentario.new_record? %>
          <%= link_to "Excluir", alerta_alerta_comentario_path(@alerta, @alerta_comentario), method: 'delete', remote: true, class: 'btn danger-color waves-effect waves-light m-r-5',
                      data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusão?')) } if can? :manage, :alerta_comentario %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
