<!-- Modals -->
<div id="leilao_observacao_modal" class="modal bottom-sheet modal-grande"></div>
<div id="leilao_evento_modal" class="modal"></div>
<div id="leilao_leiloes_anteriores_modal" class="modal modal-grande"></div>
<!-- Modals -->

<div class="row">
  <div class="col s12 m2">
    <div class="card">
      <div class="card-content p-0">
        <div class="tabs-vertical" id="leiloes-tabs">
          <ul class="tabs" id="leilaoTabs">
            <li class="tab">
              <a class="waves-effect" href="#leilao-form"><i class='small material-icons right'>search</i> Dados </a>
            </li>
            <li class="tab">
              <a class="waves-effect" href="#leilao-complementos"><i class='small material-icons right'>visibility</i> Complementos </a>
            </li>
            <li><div class="divider"></div></li>
            <li class="tab disabled">
              <a class="waves-effect" href="#cliente-alertas" class="standby"><i class='small material-icons right'>error_outline</i> Financeiro </a>
            </li>
            <li class="tab disabled">
              <a class="waves-effect" href="#cliente-contatos" class="standby"><i class='small material-icons right'>message</i> Planejamento </a>
            </li>
            <li class="tab disabled">
              <a class="waves-effect" href="#cliente-relatorios" class="standby"><i class='small material-icons right'>assessment</i> Avisos </a>
            </li>
            <li class="tab disabled">
              <a class="waves-effect" href="#cliente-relatorios" class="standby"><i class='small material-icons right'>assessment</i> Leiloeiros </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="col s12 m10">
    <%= form_for @leilao, remote: true, html: { class: "leilao-form validate card" } do |f| %>

      <div id="leilao-form" class="animated fadeIn">
        <%= render :partial => 'dados', locals: { f: f } %>
      </div>
      <div id="leilao-complementos" class="animated fadeIn">
        <%= render :partial => 'complementos', locals: { f: f } %>
      </div>

      <div class="card-action">
        <%= button_tag "Salvar", class:"btn waves-effect waves-light", id:"salvar_leilao" if can? :manage, :leilao %>
        <%= button_tag "Cancelar", class:"btn-flat waves-effect m-r-5", type: 'reset' %>

        <% if !@leilao.new_record? %>
          <%= link_to "Excluir", leilao_path(@leilao), method: 'delete', remote: true, class: 'btn danger-color waves-effect waves-light m-r-5',
                data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusÃ£o?')) } if can? :manage, :leilao  %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
