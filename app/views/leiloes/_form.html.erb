<%= form_for @leilao, remote: true, html: { class: "leilao-form col s12 validate" } do |f| %>
  <div class="row card-content m-b-0 p-b-0 p-l-30 p-r-30">
    <div class="row">
      <div class="input-field col s4">
        <%= f.text_field :nome, required:"" %>
        <%= f.label :nome, "Nome" %>
      </div>
    </div>
  </div>

  <div class="card-action">
    <%= button_tag "Salvar", class:"btn waves-effect waves-light" if can? :manage, :leilao %>
    <%= button_tag "Cancelar", class:"btn-flat waves-effect m-r-5", onclick: "$('#leilao_modal').closeModal()", type: 'button' %>

    <% if !@leilao.new_record? %>
      <%= link_to "Excluir", leilao_path(@leilao), method: 'delete', remote: true, class: 'btn danger-color waves-effect waves-light m-r-5',
            data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusÃ£o?')) } if can? :manage, :leilao  %>
    <% end %>
  </div>
<% end %>
