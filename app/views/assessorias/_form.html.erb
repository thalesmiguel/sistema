<%= form_for @assessoria, remote: true, html: { class: "assessoria-form col s12 validate" } do |f| %>
  <div class="modal-content">
    <div class="p-20 modal-border">
      <div class="row card-content m-b-0 p-b-0 p-l-30 p-r-30">
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :nome, required:"" %>
            <%= f.label :nome %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.text_area :observacao, rows: 8, class: 'materialize-textarea limita-text-area' %>
            <%= f.label :observacao, "Observações" %>
          </div>
        </div>

        <div class="row">
          <div class="file-field input-field col s12">
            <div class="btn">
              <span>Logo</span>
              <%= f.file_field :logo %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>

          <fieldset>
            <div class="input-field col s2" style="display: flex;">
              <% if @assessoria.logo.file? %>
                <%=  %>
                <%= link_to image_tag(@assessoria.logo.url(:thumb)), @assessoria.logo.url(:original, false), :target => "_blank" %>
                <%= link_to('<i class="material-icons red-text">clear</i>'.html_safe, {action: :deleta_logo_assessoria, id: @assessoria.id},
                            method: :put, remote: true, data: { confirm: 'Tem certeza?' }) %>
              <% end %>
              <%= label_tag "Logo", nil, class: "active" %>
            </div>
          </fieldset>
        </div>
      </div>

      <div class="modal-footer">
        <%= button_tag "Salvar", class:"btn waves-effect waves-light" if can? :manage, :assessoria %>
        <%= button_tag "Cancelar", class:"btn-flat waves-effect m-r-5", onclick: "$('#assessoria_modal').closeModal()", type: 'button' %>

        <% if !@assessoria.new_record? %>
          <%= link_to "Excluir", assessoria_path(@assessoria), method: 'delete', remote: true, class: 'btn danger-color waves-effect waves-light m-r-5',
                data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusão?')) } if can? :manage, :assessoria  %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
