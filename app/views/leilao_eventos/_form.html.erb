<%= form_for @leilao_evento, remote: true, html: { class: "leilao_evento-form col s12 validate" } do |f| %>
  <div class="modal-content">
    <div class="p-20 modal-border">
      <div class="row card-content m-b-0 p-b-0 p-l-30 p-r-30">
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :nome, required:"" %>
            <%= f.label :nome %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12 m2">
            <%= f.text_field :data_inicio, class:"data" %>
            <%= f.label :data_inicio, "Data Início" %>
          </div>
          <div class="input-field col s12 m2">
            <%= f.text_field :data_fim, class:"data" %>
            <%= f.label :data_fim, "Data da Fim" %>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <%= button_tag "Salvar", class:"btn waves-effect waves-light" if can? :manage, :leilao_evento %>
        <%= button_tag "Cancelar", class:"btn-flat waves-effect m-r-5", onclick: "fecha_modal('#leilao_evento_modal')", type: 'button' %>

        <% if !@leilao_evento.new_record? %>
          <%= link_to "Excluir", leilao_evento_path(@leilao_evento), method: 'delete', remote: true, class: 'btn danger-color waves-effect waves-light m-r-5',
                data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusão?')) } if can? :manage, :leilao_evento %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
